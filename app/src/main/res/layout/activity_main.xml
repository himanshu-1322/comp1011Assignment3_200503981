<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="98dp"
        android:text="@string/main_activity_title"
        android:textColor="#A60101"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageMainActivityView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageMainActivityView"
        android:layout_width="124dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/image_alt"
        app:layout_constraintBottom_toTopOf="@+id/viewVehicleButtonTitle"
        app:layout_constraintEnd_toStartOf="@+id/imageMainActivityAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/viewcarlogo" />

    <ImageView
        android:id="@+id/imageMainActivityAdd"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginTop="242dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="@string/image_alt"
        app:layout_constraintBottom_toTopOf="@+id/addVehicleButtonTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageMainActivityView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/addcarlogo" />

    <TextView
        android:id="@+id/viewVehicleButtonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="356dp"
        android:text="@string/main_activity_viewvehiclebutton_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addVehicleButtonTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageMainActivityView" />

    <TextView
        android:id="@+id/addVehicleButtonTitle"
        android:layout_width="122dp"
        android:layout_height="20dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="356dp"
        android:text="@string/main_activity_addvehiclebutton_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewVehicleButtonTitle"
        app:layout_constraintTop_toBottomOf="@+id/imageMainActivityAdd" />

</androidx.constraintlayout.widget.ConstraintLayout>